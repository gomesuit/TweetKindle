<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <settings>
    <!-- mybatisログ出力用 -->
    <setting name="logImpl" value="LOG4J2"/>
  </settings>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://127.0.0.1:3306/kindle"/>
        <property name="username" value="tweet" />
        <property name="password" value="password" />
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="myclass/data/KindleMapper.xml"/>
    <mapper resource="myclass/data/SchedulerMapper.xml"/>
    <mapper resource="myclass/data/TagMapper.xml"/>
  </mappers>
</configuration>
